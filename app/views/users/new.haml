= provide(:title, "Sign Up")
= # This currently creates a nice form, but an ugly error form
= form_for @user, html: { class: 'form-signon controls controls-row span4' } do |f|
  %h2.form-signin-heading="Sign Up"
  = f.text_field     :employee_id,           class: :span1, placeholder: "ID", show_error_msg: true
  = f.text_field     :name,                  class: :span3, placeholder: "Name", show_error_msg: true
  = f.text_field     :tagline,               class: :'input-block-level', placeholder: "Tagline", show_error_msg: true
  = f.password_field :password,              class: :span2, placeholder: "Password", show_error_msg: true
  = f.password_field :password_confirmation, class: :span2, placeholder: "Confirmation", show_error_msg: true
  = f.submit "Create My Account", class: "btn btn-large btn-primary btn-block"

